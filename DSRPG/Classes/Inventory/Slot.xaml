             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DSRPG.Classes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ContextMenu x:Key="WearbleMenu">
            <MenuItem x:Name="Wear" Header="Надеть"/>
        </ContextMenu>

        <ContextMenu x:Key="ItemMenu">
            <MenuItem Header="Назначить на слот" >
                <MenuItem Header="Слот 1"/>
                <MenuItem Header="Слот 2"/>
                <MenuItem Header="Слот 3"/>
                <MenuItem Header="Слот 4"/>
                <MenuItem Header="Слот 5"/>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="UsableMenu">
            <MenuItem Header="Использовать" >
            </MenuItem>
        </ContextMenu>
    </UserControl.Resources>

    <Grid x:Name="grid">
            
    </Grid>
</UserControl>
