<Page x:Class="DSRPG.UI.Load"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DSRPG.UI"
      mc:Ignorable="d" 
      d:DesignHeight="419" d:DesignWidth="792"
      Title="Load" Loaded="Page_Loaded">

    <Grid Background="Black">
        <Label Content="DSRPG" HorizontalAlignment="Left" Margin="283,46,0,0" VerticalAlignment="Top" Foreground="White" FontSize="72"/>
        <ProgressBar x:Name="pb" Value="{Binding Value}" HorizontalAlignment="Left" Height="38" Margin="79,280,0,0" VerticalAlignment="Top" Width="640" Background="#00E6E6E6" BorderBrush="White"/>
        <Label Content="{Binding Status}" HorizontalAlignment="Left" Margin="79,323,0,0" VerticalAlignment="Top" Height="86" Width="334" Foreground="White" FontSize="18"/>
    </Grid>
</Page>
