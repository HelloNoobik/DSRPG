<Window x:Class="DSRPG.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSRPG"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="Black">
        <Label x:Name="MusicVolumeLb" Content="Music Volume" HorizontalAlignment="Left" Margin="152,68,0,0" VerticalAlignment="Top" Foreground="White" Height="53" Width="148" FontSize="20"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="10,368,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.275,0.709" Height="41" Background="{x:Null}" Foreground="White" Click="Button_Click"/>
        <Slider x:Name="VolumeSlider" HorizontalAlignment="Left" Margin="371,80,0,0" VerticalAlignment="Top" Width="295" Height="23" Maximum="1" LargeChange="0.1" SmallChange="0.01" ValueChanged="VolumeSlider_ValueChanged"/>

    </Grid>
</Window>
