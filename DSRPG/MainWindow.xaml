<Window x:Class="DSRPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSRPG"
        mc:Ignorable="d"
        Title="DSRPG" Height="450" Width="800" Background="Black">
    <Grid>
        <Frame x:Name="frame" Content="{Binding CurrentPage}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="792" Height="419" Opacity="{Binding PageOpacity}" NavigationUIVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>

    </Grid>
</Window>
